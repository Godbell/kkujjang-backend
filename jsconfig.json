{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@router/*": ["router/*"],
      "@utility/*": ["utility/*"],
      "@model/*": ["model/*"],
      "@database/*": ["database/*"],
      "@middleware/*": ["middleware/*"],
      "@socket/*": ["socket/*"],
      "@game/*": ["game/*"]
    },
    "checkJs": true
  },
  "exclude": ["node_modules"]
}
